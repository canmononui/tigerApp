        android:layout_marginStart="20dp"
        android:fontFamily="@font/kanit_medium"
        android:text="รายการเงินทำบุญ"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/view"
        app:layout_constraintTop_toTopOf="@+id/view" />

    <!-- MONEY AMOUNT -->
    <RelativeLayout
        android:id="@+id/moneyAmount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textTop"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:padding="13dp"
        android:background="@drawable/bg_amount_gray"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textTop">

        <!-- TEXT -->
        <TextView
            android:id="@+id/moneyAmountText1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/kanit_medium"
            android:text="ยอดเงินทำบุญ"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <!-- TEXT -->
        <TextView
            android:id="@+id/moneyAmountText2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_toStartOf="@+id/moneyAmountText3"
            android:fontFamily="@font/kanit_medium"
            android:text="฿"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <!-- TEXT -->
        <TextView
            android:id="@+id/moneyAmountText3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="0dp"
            android:fontFamily="@font/kanit_medium"
            android:text="10,000,000"
            android:textColor="@color/black"
            android:textSize="15sp" />
    </RelativeLayout>

    <!-- MONEY TOTAL -->
    <RelativeLayout
        android:id="@+id/moneyTotal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/moneyAmount"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/bg_total_darkgrey"
        android:padding="13dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/moneyAmount">

        <!-- TEXT -->
        <TextView
            android:id="@+id/moneyTotalText1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/kanit_medium"
            android:text="รวมทั้งสิ้น"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <!-- TEXT -->
        <TextView
            android:id="@+id/moneyTotalText2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_toStartOf="@+id/moneyTotalText3"
            android:fontFamily="@font/kanit_medium"
            android:text="฿"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <!-- TEXT -->
        <TextView
            android:id="@+id/moneyTotalText3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="0dp"
            android:fontFamily="@font/kanit_medium"
            android:text="10,000,000"
            android:textColor="@color/black"
            android:textSize="15sp" />
    </RelativeLayout>

    <!-- CANCEL BUTTON -->
    <Button
        android:id="@+id/buttonCancel"
        android:layout_width="145dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/bg_button_white"
        android:fontFamily="@font/kanit_medium"
        android:padding="10dp"
        android:text="ยกเลิก"
        android:textColor="@color/black"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/view"
        app:layout_constraintStart_toStartOf="parent"
        android:stateListAnimator="@null" />

    <!-- SUBMIT BUTTON -->
    <Button
        android:id="@+id/buttonSubmit"
        android:layout_width="335dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/bg_button_yellow"
        android:fontFamily="@font/kanit_medium"
        android:padding="10dp"
        android:text="ยืนยัน"
        android:textColor="@color/black"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:stateListAnimator="@null" />


</androidx.constraintlayout.widget.ConstraintLayout>